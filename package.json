{
  "name": "wink",
  "version": "1.0.0",
  "description": "A Claude Code plugin that enforces disciplined coding practices",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "postinstall": "command -v bun >/dev/null 2>&1 && bun run build || npx tsc"
  },
  "keywords": [
    "claude",
    "claude-code",
    "plugin",
    "code-quality",
    "discipline",
    "hooks",
    "verification"
  ],
  "author": "Kishore",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skishore23/wink.git"
  },
  "bugs": {
    "url": "https://github.com/skishore23/wink/issues"
  },
  "homepage": "https://github.com/skishore23/wink#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}

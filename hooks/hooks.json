{
  "description": "Wink discipline hooks - enforces verification, detects loops, tracks evidence",
  "hooks": {
    "UserPromptSubmit": [{
      "hooks": [{
        "type": "command",
        "command": "bun ${CLAUDE_PLUGIN_ROOT}/dist/hooks/userPromptSubmit.js"
      }]
    }],

    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/dist/hooks/preToolUse.js"
        }]
      },
      {
        "matcher": "Read|View",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/dist/hooks/preToolUse.js"
        }]
      },
      {
        "matcher": "Grep|Glob",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/dist/hooks/preToolUse.js"
        }]
      },
      {
        "matcher": "Task",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/dist/hooks/preToolUse.js"
        }]
      }
    ],

    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/dist/hooks/postEdit.js"
        }]
      },
      {
        "matcher": "Read|View|Grep|Glob",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/dist/hooks/postRead.js"
        }]
      },
      {
        "matcher": "Bash|Task|WebFetch|WebSearch|Skill|TodoWrite|AskUserQuestion|EnterPlanMode|ExitPlanMode|NotebookEdit|KillShell|TaskOutput",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/dist/hooks/postToolUse.js"
        }]
      }
    ],

    "Stop": [{
      "hooks": [{
        "type": "command",
        "command": "bun ${CLAUDE_PLUGIN_ROOT}/dist/hooks/stopGate.js"
      }]
    }],

    "SubagentStop": [{
      "hooks": [{
        "type": "command",
        "command": "bun ${CLAUDE_PLUGIN_ROOT}/dist/hooks/stopGate.js"
      }]
    }],

    "SessionStart": [{
      "hooks": [{
        "type": "command",
        "command": "bun ${CLAUDE_PLUGIN_ROOT}/dist/hooks/sessionStart.js"
      }]
    }]
  }
}

{
  "description": "Wink discipline hooks - enforces verification, detects loops, tracks evidence",
  "hooks": {
    "UserPromptSubmit": [{
      "hooks": [{
        "type": "command",
        "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/userPromptSubmit.ts"
      }]
    }],

    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/preToolUse.ts"
        }]
      },
      {
        "matcher": "Read|View",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/preToolUse.ts"
        }]
      },
      {
        "matcher": "Grep",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/preToolUse.ts"
        }]
      },
      {
        "matcher": "Task",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/preToolUse.ts"
        }]
      }
    ],

    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/postEdit.ts"
        }]
      },
      {
        "matcher": "Read|View|Grep|Glob",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/postRead.ts"
        }]
      },
      {
        "matcher": ".*",
        "hooks": [{
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/postToolUse.ts"
        }]
      }
    ],

    "Stop": [{
      "hooks": [{
        "type": "command",
        "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/stopGate.ts"
      }]
    }],

    "SubagentStop": [{
      "hooks": [{
        "type": "command",
        "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/stopGate.ts"
      }]
    }],

    "SessionStart": [{
      "hooks": [{
        "type": "command",
        "command": "bun ${CLAUDE_PLUGIN_ROOT}/src/hooks/sessionStart.ts"
      }]
    }]
  }
}
